
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Login</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">
    <style>
        .logoTitulo {
            color: #e6e6e6;
            font-size: 100px;
            letter-spacing: -10px;
        }
    </style>
</head>

<body class="blue">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <h4 class="logoTitulo">NSP School</h4>
            </div>
                
            <p>Login in</p>
            <form class="m-t">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="User" required="" id="txtuser">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" required="" id="txtpassword">
                </div>
                <button type="button" class="btn btn-primary block full-width m-b" id="btnlogin">Login</button>
            </form>
            <p class="m-t"> <small>NSP School &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>
    @Html.Hidden("urlBase", Url.Content("~/"))
    <!-- Mainly scripts -->
    <script src="~/Scripts/js/jquery-2.1.1.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/Home/Login.js"></script>
</body>
</html>
